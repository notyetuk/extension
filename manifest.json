{
  "name": "NotYet.uk",
  "description": "An extension for NotYet.uk",
  "manifest_version": 3,
  "version": "0.0.1",
  "author": "me@rrocha.uk",
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["src/index.js", "src/api.js"],
    "css": ["src/styles.css"]
  }],
  "web_accessible_resources": [{
    "matches": ["<all_urls>"],
    "resources": ["src/amazon.js", "src/request.js"]
  }],
  "action": {
    "default_popup": "src/options.html",
    "default_tile": "NotYet.uk options"
  },
  "permissions": ["storage"]
}
